<div class="d-flex align-items-center py-4">

    <main class="form-signin w-100 m-auto">

        <form method="POST" action="/api/session/login">
            <h1 class="h3 mb-3 fw-normal text-uppercase">Please Log in</h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email"
                    required>
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password"
                    required>
                <label for="floatingPassword">Password</label>
            </div>
            <button class="btn btn-primary w-100 py-2 text-capitalize" type="submit">Log in</button>
        </form>

        <div>
            <p class="form-text m-0">Don't have an account?<span><a href="/register"
                        class="btn btn-link text-capitalize px-1">Sign in</a></span></p>
            <p class="form-text m-0">Restore password?<span><a href="/restore-password"
                        class="btn btn-link text-capitalize px-1">Click here!</a></span></p>
        </div>
    </main>
</div>